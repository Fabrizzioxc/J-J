---
// src/pages/servicios/index.astro
import Layout from '@layouts/Layout.astro';
import PageHero from '@components/ui/PageHero.astro';
import ServicesBanner from '@components/ui/ServicesBanner.astro';
import ServicesGrid from '@components/ServicesGrid.astro';

// Importa los datos de tus servicios
import { servicesCardsData } from '@data/servicesData';

---

<Layout
    title="Servicios | J&J Servicios Generales"
    description="Descubre todos los servicios de construcción, remodelación, electricidad y más que J&J Servicios Generales ofrece en Lima."
>
    <PageHero
        title="Servicios"
        breadcrumbs={[
            { label: 'Inicio' },
            { label: 'Servicios' },
        ]}
    />

    <main>
        <ServicesBanner />

        <ServicesGrid services={servicesCardsData} />

        <ServicesBanner />
    </main>
</Layout>