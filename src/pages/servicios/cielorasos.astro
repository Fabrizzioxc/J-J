---
import PageLayout from '@layouts/PageLayout.astro'; // Importa el nuevo PageLayout
import cielorasosImage from '@assets/servicios/cielorasos.webp';
// ServicesBanner se elimina de aquí
// import ServicesBanner from '@components/ui/ServicesBanner.astro';
---

<PageLayout
    title="Instalación y Diseño de Cielo Rasos | J&J Servicios Generales"
    description="Expertos en instalación y diseño de cielorrasos modernos y funcionales. Soluciones estéticas y acústicas para todo tipo de ambientes."
    pageHeroTitle="Cielo Rasos"
    breadcrumbs={[ // Breadcrumbs para el PageHero
        { label: 'Inicio' },
        { label: 'Servicios' },
        { label: 'Cielo Rasos' },
    ]}
>
    <section class="py-16 md:py-20">
        <div class="container mx-auto px-4 text-center">
            <img
                src={cielorasosImage.src}
                alt="Servicio de Instalación y Diseño de Cielo Rasos de J&J Servicios Generales"
                class="w-full max-w-4xl mx-auto rounded-lg shadow-lg mb-12"
                data-astro-transition-name="service-image-cielo-rasos"
                style="view-transition-name: service-image-cielo-rasos;"
            />

            <h1 class="text-5xl font-bold text-[var(--color-jj-dark)] mb-8 hidden">Instalación y Diseño de Cielo Rasos</h1>
            <p class="text-lg text-[var(--color-jj-dark)] max-w-3xl mx-auto mb-12 leading-relaxed">
                Ofrecemos soluciones innovadoras en cielorrasos para mejorar la estética y funcionalidad de tus espacios. Desde cielorrasos suspendidos, drywall, decorativos o acústicos, nuestro equipo garantiza una instalación precisa y acabados de primera para todo tipo de ambientes, sean residenciales o comerciales.
            </p>

            <h2 class="text-4xl font-bold text-[var(--color-jj-dark)] mb-6 mt-12">Ventajas de Nuestros Cielo Rasos:</h2>
            <ul class="list-disc list-inside text-left max-w-2xl mx-auto space-y-3 text-[var(--color-jj-dark)] text-lg">
                <li>Mejora estética y valor del inmueble.</li>
                <li>Aislamiento térmico y acústico.</li>
                <li>Ocultamiento de instalaciones eléctricas y de tuberías.</li>
                <li>Variedad de diseños y materiales.</li>
                <li>Instalación rápida y limpia.</li>
                <li>Mantenimiento sencillo.</li>
            </ul>

            <div class="mt-16">
                <a href="/contacto" class="inline-block bg-[var(--color-jj-accent)] text-[var(--color-jj-dark)] px-10 py-5 text-xl font-semibold hover:opacity-90 transition-opacity rounded-md">
                    ¡Diseña tu Cielo Raso ideal!
                </a>
            </div>
        </div>
    </section>
</PageLayout>