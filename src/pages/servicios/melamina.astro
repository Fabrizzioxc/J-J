---
import PageLayout from '@layouts/PageLayout.astro'; // Importa el nuevo PageLayout
import melaminaImage from '@assets/servicios/melamina.webp';
// ServicesBanner se elimina de aquí
// import ServicesBanner from '@components/ui/ServicesBanner.astro';
---

<PageLayout
    title="Servicio de Trabajos en Melamina | J&J Servicios Generales"
    description="Diseño y fabricación de muebles a medida en melamina. Soluciones prácticas y estéticas para cocinas, closets, escritorios y más."
    pageHeroTitle="Trabajos en Melamina"
    breadcrumbs={[ // Breadcrumbs para el PageHero
        { label: 'Inicio' },
        { label: 'Servicios' },
        { label: 'Trabajos en Melamina' },
    ]}
>
    <section class="py-16 md:py-20">
        <div class="container mx-auto px-4 text-center">
            <img
                src={melaminaImage.src}
                alt="Servicio de Trabajos en Melamina de J&J Servicios Generales"
                class="w-full max-w-4xl mx-auto rounded-lg shadow-lg mb-12"
                data-astro-transition-name="service-image-melamina"
                style="view-transition-name: service-image-melamina;"
            />

            <h1 class="text-5xl font-bold text-[var(--color-jj-dark)] mb-8 hidden">Servicio de Trabajos en Melamina</h1>
            <p class="text-lg text-[var(--color-jj-dark)] max-w-3xl mx-auto mb-12 leading-relaxed">
                Creamos muebles de melamina a medida que combinan funcionalidad, estética y durabilidad. Desde cocinas modernas, closets organizados, escritorios personalizados hasta cualquier solución de almacenamiento, nuestros diseños se adaptan a tus necesidades y al estilo de tu espacio.
            </p>

            <h2 class="text-4xl font-bold text-[var(--color-jj-dark)] mb-6 mt-12">Nuestros Trabajos en Melamina Incluyen:</h2>
            <ul class="list-disc list-inside text-left max-w-2xl mx-auto space-y-3 text-[var(--color-jj-dark)] text-lg">
                <li>Diseño personalizado de muebles.</li>
                <li>Fabricación e instalación de cocinas, closets, escritorios, estantes.</li>
                <li>Uso de melamina de alta calidad y resistencia.</li>
                <li>Acabados profesionales y herrajes duraderos.</li>
                <li>Optimización de espacios.</li>
                <li>Entrega y montaje puntual.</li>
            </ul>

            <div class="mt-16">
                <a href="/contacto" class="inline-block bg-[var(--color-jj-accent)] text-[var(--color-jj-dark)] px-10 py-5 text-xl font-semibold hover:opacity-90 transition-opacity rounded-md">
                    ¡Cotiza tus Muebles de Melamina!
                </a>
            </div>
        </div>
    </section>
</PageLayout>