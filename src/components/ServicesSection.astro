---
// src/components/ServicesSection.astro

import ServiceCard from './ui/ServiceCard.astro';
import PaintBrushIcon from './icons/PaintBrushIcon.astro';
import WrenchScrewdriverIcon from './icons/WrenchScrewdriverIcon.astro';
import BoltIcon from './icons/BoltIcon.astro';
import SectionTitle from './SectionTitle.astro'; 
import AnimateOnScroll from './ui/AnimateOnScroll.astro'; // <-- 1. IMPORTA EL COMPONENTE
---
{/* Sección de Servicios:
  - pt-16: Padding superior de la sección (64px).
  - pb-28: Un padding inferior más generoso (112px).
  - bg-[var(--color-jj-light-bg)]: Color de fondo.
  - min-h-screen: ¡NUEVO! Hace que la sección ocupe al menos la altura completa de la pantalla.
*/}
<section class="min-h-[90vh] pt-16 bg-[var(--color-jj-light-bg)]"> 
    {/* Contenedor principal de la sección:
      - container mx-auto: Centra el contenido y aplica max-width por defecto de Tailwind.
      - px-4: Padding lateral de la sección (16px).
    */}
    <div class="container mx-auto px-4 pb-8"> 

        {/* Contenedor del encabezado (Título principal y Botón "Ver todos los servicios"):
          - flex flex-col md:flex-row: Columna en móvil, fila en MD.
          - md:items-end: Alinea los elementos al final (botón abajo).
          - md:justify-between: Espacia el título y el botón.
          - mb-24: Margen inferior estándar (96px) para separar el encabezado de las tarjetas.
        */}
        <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-12 md:mb-16"> 

            {/* Contenedor del SectionTitle y el Título principal:
              - text-center md:text-left: Alineación del texto.
            */}
            <div class="text-center md:text-left mb-8 md:mb-0">
            <SectionTitle
                title="Servicios"
                iconColorClass="text-[var(--color-jj-dark)]"
                textColorClass="text-[var(--color-jj-dark)]"
                containerClass="flex items-center gap-2 mb-4 justify-center md:justify-start"
                iconSize={28}
            />
            {/* Título Principal:
                - text-6xl: Tamaño del título. Considera responsive como text-5xl md:text-6xl si es muy grande en móviles pequeños.
                - font-bold text-[var(--color-jj-dark)]: Estilos de texto.
                - flex flex-col: Para que las líneas (spans) se apilen verticalmente.
                - items-center justify-center: Centra el texto en móvil.
                - md:items-start md:justify-start: Alinea el texto a la izquierda en desktop.
            */}
            <h2 class=" text-4xl md:text-5xl font-bold text-[var(--color-jj-dark)] flex flex-col items-center justify-center md:items-start md:justify-start">
                <span class="block">Soluciones Completas</span>
                <span class="block">para Cada Rincón</span>
            </h2>
        </div>

            {/* Botón "Ver todos los servicios":
              - w-full md:w-auto: Ocupa todo el ancho en móvil, ancho automático en MD.
              - flex justify-center md:justify-end: Centra el botón en móvil, lo alinea a la derecha en MD.
            */}
            <div class="w-full md:w-auto flex justify-center md:justify-end">
                <a href="/servicios" class="inline-block bg-[var(--color-jj-dark)] text-[var(--color-jj-text-light)] px-8 py-4 text-lg font-semibold hover:opacity-90 transition-opacity">
                    Ver todos los servicios
                </a>
            </div>
        </div>

        {/* Contenedor de las Service Cards:
          - grid grid-cols-1 xl:grid-cols-3: Configuración de la grilla (1 columna en móvil, 3 en XL).
          - gap-12: Espaciado entre las cards (48px).
        */}
        
        <div class="grid grid-cols-1 xl:grid-cols-3 gap-12 max-w-8xl mx-auto">
            <AnimateOnScroll client:visible style="--animation-delay: 0ms;">
        <ServiceCard
            title="Pintura"
            description="Renueva y embellece tus ambientes con colores vibrantes y acabados duraderos que reflejan tu estilo."
            href="/servicios/pintura"
            class="min-h-[480px]" 
            icon={PaintBrushIcon}
        />
    </AnimateOnScroll>

    <AnimateOnScroll client:visible style="--animation-delay: 200ms;">
        <ServiceCard
            title="Drywall"
            description="Transformamos tus espacios con soluciones rápidas, versátiles y de alta calidad en drywall para interiores y exteriores."
            href="/servicios/drywall"
            class="min-h-[480px]" 
            icon={WrenchScrewdriverIcon}
        />
    </AnimateOnScroll>

    <AnimateOnScroll client:visible style="--animation-delay: 400ms;">
        <ServiceCard
            title={'Electricidad'}
            description="Garantizamos un sistema eléctrico eficiente y seguro, desde nuevas instalaciones hasta reparaciones y mantenimiento."
            href="/servicios/electricidad"
            class="min-h-[480px]" 
            icon={BoltIcon}
        />
    </AnimateOnScroll>
        </div>
        
    </div>
</section>