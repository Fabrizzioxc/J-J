---
// src/components/ServicesSection.astro

import ServiceCard from './ui/ServiceCard.astro';

// Importa los iconos que ya tienes
import PaintBrushIcon from './icons/PaintBrushIcon.astro';
import WrenchScrewdriverIcon from './icons/WrenchScrewdriverIcon.astro';
import BoltIcon from './icons/BoltIcon.astro';

// ¡Importa el nuevo componente SectionTitle!
import SectionTitle from './SectionTitle.astro'; // Ajusta la ruta si SectionTitle.astro está en otra carpeta
---
<section class="py-16 bg-[var(--color-jj-light-bg)]">
    <div class="container mx-auto px-4">

        {/* Contenedor principal para el Label, Título principal y Botón "Ver todos los servicios" */}
        {/* Cambiado de justify-between a items-end en md para alinear el botón abajo a la derecha */}
        <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-16">

            {/* Contenedor para el SectionTitle y el Título principal (lado izquierdo) */}
            <div class="text-center md:text-left mb-8 md:mb-0">
                <SectionTitle
                    title="servicios"
                    iconColorClass="text-[var(--color-jj-dark)]"
                    textColorClass="text-[var(--color-jj-dark)]"
                    containerClass="flex items-center gap-2 mb-10 justify-center md:justify-start"
                    iconSize={28}
                />
                <h2 class="text-6xl font-bold text-[var(--color-jj-dark)]">Soluciones Completas <br> para Cada Rincón</h2>
            </div>

            {/* Botón "Ver todos los servicios" - A la derecha en desktop, y en su propia línea abajo */}
            <div class="w-full md:w-auto flex justify-center md:justify-end"> {/* Ajuste clave aquí */}
                <a href="/servicios" class="inline-block bg-[var(--color-jj-dark)] text-[var(--color-jj-text-light)] px-8 py-4 text-lg font-semibold hover:opacity-90 transition-opacity rounded">
                    Ver todos los servicios
                </a>
            </div>
        </div>

        {/* Las Service Cards se mantienen igual */}
        <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
            <ServiceCard
                title="Pintura"
                description="Renueva y embellece tus ambientes con colores vibrantes y acabados duraderos que reflejan tu estilo."
                href="/servicios/pintura"
                icon={PaintBrushIcon}
            />

            <ServiceCard
                title="Drywall"
                description="Transformamos tus espacios con soluciones rápidas, versátiles y de alta calidad en drywall para interiores y exteriores."
                href="/servicios/drywall"
                icon={WrenchScrewdriverIcon}
            />

            <ServiceCard
                title={'Instalaciones<br />Eléctricas'}
                description="Garantizamos un sistema eléctrico eficiente y seguro, desde nuevas instalaciones hasta reparaciones y mantenimiento."
                href="/servicios/electricidad"
                icon={BoltIcon}
            />
        </div>
    </div>
</section>