---
// src/components/QuoteSection.astro
interface Props {
    quote: string; // La frase a destacar
    author?: string; // El nombre del autor
}

const { quote, author } = Astro.props;
---

<section class="py-16 md:py-16 text-center">
    <div class="container mx-auto px-4">
        <div class="bg-[var(--color-jj-accent)] py-10 px-8 md:py-12 md:px-16">
            <blockquote class="text-[var(--color-jj-dark)] font-bold text-4xl md:text-5xl leading-tight mb-4 max-w-lg mx-auto">
                "{quote}"
            </blockquote>
            {author && (
                <p class="text-[var(--color-jj-dark)] text-lg md:text-xl font-semibold mx-auto">
                    {author}
                </p>
            )}
        </div>
    </div>
</section>