---
// src/components/ServicesBanner.astro
import AsteriskIcon from './icons/AsteriskIcon.astro'; // Importa el nuevo icono
---

<section class="bg-[var(--color-jj-accent)] py-4 text-[var(--color-jj-dark)]">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-center items-center gap-x-8 gap-y-2 text-xl md:text-2xl font-bold">
      {/* Pintura */}
      <div class="flex items-center gap-2 whitespace-nowrap">
        <AsteriskIcon class="text-[var(--color-jj-dark)]" size={24} />
        <span>Pintura</span>
      </div>

      {/* Remodelaciones */}
      <div class="flex items-center gap-2 whitespace-nowrap">
        <AsteriskIcon class="text-[var(--color-jj-dark)]" size={24} />
        <span>Remodelaciones</span>
      </div>

      {/* Drywall */}
      <div class="flex items-center gap-2 whitespace-nowrap">
        <AsteriskIcon class="text-[var(--color-jj-dark)]" size={24} />
        <span>Drywall</span>
      </div>

      {/* Electricidad */}
      <div class="flex items-center gap-2 whitespace-nowrap">
        <AsteriskIcon class="text-[var(--color-jj-dark)]" size={24} />
        <span>Electricidad</span>
      </div>

      {/* Acabados */}
      <div class="flex items-center gap-2 whitespace-nowrap">
        <AsteriskIcon class="text-[var(--color-jj-dark)]" size={24} />
        <span>Acabados</span>
      </div>
    </div>
  </div>
</section>