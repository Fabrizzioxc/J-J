---
// src/components/ui/MaintenanceComingSoon.astro
import ToolsIcon from '../icons/ToolsIcon.astro'; // Importa tu icono de herramientas

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = 'En Mantenimiento',
  description = 'Estamos trabajando arduamente para brindarte el mejor servicio de mantenimiento. ¡Pronto revelaremos más!',
  buttonText = 'Solicitar Asesoría Gratuita',
  buttonLink = '/contacto'
} = Astro.props;
---

<section class="py-16 md:py-24 text-[var(--color-jj-dark)]">
    <div class="container mx-auto px-4 text-center">
        <div class="max-w-3xl mx-auto">
            <ToolsIcon class="text-[var(--color-jj-gray)] mx-auto mb-8" size={120} /> {/* Icono centrado */}

            <h2 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
                {title}
            </h2>

            <p class="text-lg md:text-xl leading-relaxed mb-10">
                {description}
            </p>

            {/* Botón */}
            <a
                href={buttonLink}
                class="inline-block bg-[var(--color-jj-accent)] text-[var(--color-jj-dark)] px-10 py-5 text-lg font-semibold hover:opacity-90 transition-opacity shadow-lg"
            >
                {buttonText}
            </a>
            
        </div>
    </div>
</section>