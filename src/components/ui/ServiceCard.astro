---
// src/components/ui/ServiceCard.astro
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  title: string;
  description: string;
  href: string; // URL del enlace "Ver más"
  icon: any; // El componente de icono Astro (ej. PaintBrushIcon)
}

const { title, description, href, icon: IconComponent, class: className, ...attrs } = Astro.props;
---

<div class={`bg-[var(--color-jj-text-light)] px-8 py-10 shadow-md flex flex-col justify-between border border-[var(--color-jj-gray)] rounded-none ${className}`} {...attrs}>

    {/* Contenedor Superior: Icono y Título
        - flex flex-col: Asegura que Icono y Título estén siempre apilados verticalmente.
        - items-start: **NUEVO**: Alinea el contenido a la izquierda (icono y título).
        - text-left: **NUEVO**: Asegura que el texto (título) esté alineado a la izquierda.
        - mb-6: Margen inferior para separar de la descripción.
    */}
    <div class="flex flex-col items-start text-left mb-4">
        {/* Contenedor del Icono CUADRADO:
            - w-16 h-16: Tamaño fijo y cuadrado (64px x 64px).
            - bg-[var(--color-jj-accent)]: Color de fondo.
            - rounded-none: **NUEVO**: Asegura esquinas cuadradas.
            - flex items-center justify-center: Centra el icono dentro de su cuadrado.
            - flex-shrink-0: Evita que el contenedor del icono se encoja.
            - mb-4: Espacio entre el cuadrado del icono y el título.
        */}
        <div class="w-20 h-20 bg-[var(--color-jj-accent)] rounded-none flex items-center justify-center flex-shrink-0 mb-10">
            <IconComponent size="w-10 h-10" color="text-[var(--color-jj-dark)]" /> {/* Tamaño del icono dentro del cuadrado */}
        </div>
        {/* Título:
            - text-3xl md:text-4xl: Tamaño del título.
            - font-bold text-[var(--color-jj-dark)]: Estilos de fuente.
            - leading-tight: Ajusta el interlineado.
        */}
        <h3 class="text-4xl md:text-4xl font-bold text-[var(--color-jj-dark)] text-left leading-tight" set:html={title}></h3>
    </div>

    {/* Contenedor del Párrafo de Descripción:
        - flex-grow: Permite que este div ocupe el espacio restante, empujando el botón hacia abajo.
        - text-left: Alinea el párrafo a la izquierda.
        - mb-8: Margen inferior para separar de el botón.
    */}
    <div class="flex-grow text-left">
        {/* Párrafo de Descripción:
            - text-lg md:text-xl: Tamaño responsivo.
            - leading-relaxed: Para mejorar la legibilidad del texto de la descripción.
        */}
        <p class="text-[var(--color-jj-text-dark)] text-lg md:text-xl leading-relaxed">
            {description}
        </p>
    </div>

    {/* Botón "Ver más":
        - w-full: Ocupa todo el ancho.
        - text-center: Centra el texto del botón.
        - rounded-none: Asegura bordes cuadrados para el botón también.
        - px-6 py-3: Padding del botón.
    */}
    <div>
        <a href={href} class="bg-[var(--color-jj-dark)] text-[var(--color-jj-text-light)] px-6 py-3 font-semibold hover:opacity-90 transition-opacity block w-full text-center text-lg md:text-xl">
            Ver más
        </a>
    </div>
</div>