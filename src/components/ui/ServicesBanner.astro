---

import AsteriskIcon from '../icons/AsteriskIcon.astro';

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section class:list={["bg-[var(--color-jj-accent)] py-4 text-[var(--color-jj-dark)] w-full overflow-hidden", className]}>
  <div class="flex flex-wrap justify-center items-center gap-x-8 gap-y-2 text-xl md:text-2xl font-bold">
    {/* Pintura */}
    <AsteriskIcon class="text-[var(--color-jj-dark)] flex-shrink-0" size={24} />
    <div class="flex items-center gap-2">
      <span class="whitespace-nowrap">Pintura</span>
    </div>

    {/* Remodelaciones */}
    <AsteriskIcon class="text-[var(--color-jj-dark)] flex-shrink-0" size={24} />
    <div class="flex items-center gap-2">
      <span class="whitespace-nowrap">Remodelaciones</span>
    </div>

    {/* Drywall */}
    <AsteriskIcon class="text-[var(--color-jj-dark)] flex-shrink-0" size={24} />
    <div class="flex items-center gap-2">
      <span class="whitespace-nowrap">Drywall</span>
    </div>

    {/* Electricidad */}
    <AsteriskIcon class="text-[var(--color-jj-dark)] flex-shrink-0" size={24} />
    <div class="flex items-center gap-2">
      <span class="whitespace-nowrap">Electricidad</span>
    </div>

    {/* Acabados */}
    <AsteriskIcon class="text-[var(--color-jj-dark)] flex-shrink-0" size={24} />
    <div class="flex items-center gap-2">
      <span class="whitespace-nowrap">Acabados</span>
    </div>
  </div>
</section>