---
// src/components/HeroSection.astro
import { Image } from 'astro:assets';
import heroImage from '../assets/hero-drywall-jj.webp';

interface Props {
  class?: string; 
}

const { class: additionalClass } = Astro.props;
---

<section class={`min-h-screen flex items-center overflow-hidden bg-[var(--color-jj-accent)] relative pt-20 ${additionalClass || ''}`}>
    <div class="container mx-auto px-4 flex flex-col lg:flex-row items-center">
        <div class="lg:w-1/2 w-full text-center lg:text-left py-12 lg:py-0 pr-0 lg:pr-12 z-10">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 text-[var(--color-jj-dark)] leading-tight">
                SOLUCIONES <strong class="inline-block">CONFIABLES</strong> PARA TRANSFORMAR TUS <strong class="inline-block">ESPACIOS</strong>
            </h1>
            <p class="text-2xl text-[var(--color-jj-dark)] mb-8 max-w-xl lg:max-w-none mx-auto lg:mx-0 font-semibold">
                Especialistas en instalación de Drywall, pintura profesional y servicios eléctricos.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 mb-16 justify-center lg:justify-start text-lg">
                <a href="/contacto" class="bg-[var(--color-jj-dark)] text-[var(--color-jj-text-light)] px-8 py-4 font-semibold hover:opacity-90 transition-opacity rounded">
                    Cotiza tu Proyecto
                </a>
                <a href="/proyectos" class="border-2 border-[var(--color-jj-dark)] text-[var(--color-jj-dark)] px-8 py-4 font-semibold hover:bg-[var(--color-jj-dark)] hover:text-[var(--color-jj-text-light)] transition-colors rounded">
                    Ver Proyectos
                </a>
            </div>

            <div class="flex flex-col sm:flex-row justify-center lg:justify-start gap-y-8 sm:gap-x-12 mt-8">
                <div class="flex flex-col items-center lg:items-start">
                    <span class="text-4xl font-bold text-[var(--color-jj-dark)]">+12</span>
                    <span class="text-lg text-[var(--color-jj-dark)]">Años de Experiencia</span>
                </div>

                <div class="hidden sm:block w-px bg-[var(--color-jj-dark)] h-20 self-center"></div>

                <div class="flex flex-col items-center lg:items-start">
                    <span class="text-4xl font-bold text-[var(--color-jj-dark)]">+500</span>
                    <span class="text-lg text-[var(--color-jj-dark)]">Proyectos Realizados</span>
                </div>

                <div class="hidden sm:block w-px bg-[var(--color-jj-dark)] h-20 self-center"></div>

                <div class="flex flex-col items-center lg:items-start">
                    <span class="text-4xl font-bold text-[var(--color-jj-dark)]">100%</span>
                    <span class="text-lg text-[var(--color-jj-dark)]">Clientes Satisfechos</span>
                </div>
            </div>
        </div>

        <div class="hidden lg:block absolute right-0 top-0 bottom-0 w-1/2">
            <Image
                src={heroImage}
                alt="Trabajadores instalando drywall"
                class="w-full h-full object-cover object-center rounded-l-lg shadow-lg"
                widths={[300, 600, 900, 1200]}
                sizes="(max-width: 1024px) 100vw, 50vw"
                loading="eager" 
            />
        </div>
    </div>
</section>