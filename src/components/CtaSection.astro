---
// src/components/CtaSection.astro
import { Image } from 'astro:assets';
import SectionTitle from './SectionTitle.astro';

// Importamos la única imagen de brocha
import brushImage from '../assets/bg-cta.png'; // AJUSTA ESTA RUTA SI ES NECESARIO
---

<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="relative bg-[var(--color-jj-accent)] text-[var(--color-jj-dark)] rounded-lg py-16 px-8 md:px-16 lg:px-24 overflow-hidden">
            
            {/* Imagen de brocha superior derecha */}
            <div class="hidden md:block absolute top-0 right-0 transform translate-x-1/4 -translate-y-1/4 rotate-45 opacity-30 lg:opacity-50 z-0"> 
                <Image
                    src={brushImage}
                    alt="Brocha de pintura decorativa"
                    width={200}
                    height={200}
                    loading="lazy"
                />
            </div>

            {/* Imagen de brocha inferior izquierda */}
            <div class="hidden md:block absolute bottom-0 left-0 transform -translate-x-1/4 translate-y-1/4 -rotate-45 opacity-30 lg:opacity-50 z-0">
                <Image
                    src={brushImage}
                    alt="Brocha de pintura decorativa"
                    width={200}
                    height={200}
                    loading="lazy"
                />
            </div>

            {/* Contenido centrado de la CTA */}
            <div class="relative z-10 max-w-3xl mx-auto text-center">
                {/* Label de la sección "Contacto" */}
                <div class="mb-4 flex justify-center">
                    <SectionTitle
                        title="Contacto"
                        iconColorClass="text-[var(--color-jj-dark)]"
                        textColorClass="text-[var(--color-jj-dark)]"
                        containerClass="flex items-center gap-2 py-[5px]"
                        iconSize={24}
                    />
                </div>

                {/* Título principal de la CTA */}
                <h2 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
                    Consulta Totalmente Gratis
                </h2>

                {/* Párrafo descriptivo */}
                <p class="text-lg md:text-xl leading-relaxed mb-8">
                    Solicita tu cotización completamente gratis y sin compromiso. Nuestro equipo te asesorará para hacer realidad tu visión con la calidad y experiencia J&J.
                </p>

                {/* Botón de llamada a la acción */}
                <div>
                    <a
                        href="/contacto"
                        class="inline-block bg-[var(--color-jj-dark)] text-[var(--color-jj-text-light)] px-10 py-5 text-lg font-semibold hover:opacity-90 transition-opacity shadow-lg"
                    >
                        Solicitar Cotización Gratuita
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>