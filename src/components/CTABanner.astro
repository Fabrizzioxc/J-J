---
import AnimateOnScroll from './ui/AnimateOnScroll.astro';

// src/components/CTABanner.astro
interface Props {
    title: string;
    buttonText: string;
    buttonLink: string;
}

const { title, buttonText, buttonLink } = Astro.props;

// Clases de color (se aplicar√°n al div interno)
const bgColorClass = 'bg-[var(--color-jj-accent)]';
const titleColorClass = 'text-[var(--color-jj-dark)]';
const buttonBgClass = 'bg-[var(--color-jj-dark)]';
const buttonTextColorClass = 'text-white';
---

<section class="py-16 md:py-20 text-center">
    <div class="container mx-auto px-4">
        <div class={`py-10 px-8 md:py-12 md:px-16 ${bgColorClass}`}>
            <AnimateOnScroll style="--animation-delay: 100ms">
            <h2 class={`font-bold text-4xl md:text-5xl leading-tight mb-8 max-w-lg mx-auto ${titleColorClass}`}>
                {title}
            </h2>

            <a href={buttonLink} class={`inline-block px-10 py-4 font-semibold text-lg ${buttonBgClass} ${buttonTextColorClass} hover:opacity-90 transition-opacity`} style="border-radius: 0;">
                {buttonText}
            </a>
            </AnimateOnScroll>
        </div>
    </div>
</section>