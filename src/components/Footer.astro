---
// src/components/Footer.astro
import { Image } from 'astro:assets';

// Asumo que tienes un logo para el footer
import footerLogo from '../assets/jj-logo-light.webp';

// Importa los iconos de redes sociales
import FacebookIcon from './icons/FacebookIcon.astro';
import WhatsAppOut from './icons/WhatsAppOut.astro';
import LinkedinIcon from './icons/LinkedinIcon.astro';

---

<footer class="bg-[var(--color-jj-dark)] text-[var(--color-jj-text-light)] py-16 lg:py-20">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 md:gap-8 lg:gap-16 mb-12">
            <div class="flex flex-col items-center md:items-start text-center md:text-left">
                <a href="/" class="mb-4">
                    <Image
                        src={footerLogo}
                        alt="Logo J&J Servicios Generales"
                        width={100}
                        height={40}
                        loading="lazy"
                    />
                </a>
                <p class="text-base leading-relaxed mb-6 max-w-sm">
                    Especialistas en instalación de Drywall, pintura profesional y servicios eléctricos. Calidad garantizada para tu hogar o negocio.
                </p>
                <div class="flex gap-4">
                    <a href="https://www.facebook.com/profile.php?id=100049409715226" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
                        <FacebookIcon className="text-[var(--color-jj-accent)] hover:text-white transition-colors w-6 h-6"/>
                    </a>
                    <a href="https://wa.me/c/51992198415" target="_blank" rel="noopener noreferrer" aria-label="WhatsApp">
                        <WhatsAppOut className="text-[var(--color-jj-accent)] hover:text-white transition-colors w-6 h-6"/>
                    </a>
                    <a href="https://www.linkedin.com/in/invegar-sac-sistema-drywall-11546a10a/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                        <LinkedinIcon className="text-[var(--color-jj-accent)] hover:text-white transition-colors w-6 h-6"/>
                    </a>
                </div>
            </div>

            <div class="text-center md:text-left">
                <h3 class="text-xl font-semibold mb-6 text-[var(--color-jj-accent)]">Navegación</h3>
                <ul class="space-y-3">
                    <li><a href="/nosotros" class="hover:text-[var(--color-jj-accent)] transition-colors">Nosotros</a></li>
                    <li><a href="/servicios" class="hover:text-[var(--color-jj-accent)] transition-colors">Servicios</a></li>
                    <li><a href="/proyectos" class="hover:text-[var(--color-jj-accent)] transition-colors">Proyectos</a></li>
                    <li><a href="/contacto" class="hover:text-[var(--color-jj-accent)] transition-colors">Contacto</a></li>
                </ul>
            </div>

            <div class="text-center md:text-left">
                <h3 class="text-xl font-semibold mb-6 text-[var(--color-jj-accent)]">Redes Sociales</h3>
                <ul class="space-y-3">
                    <li><a href="https://wa.me/c/51992198415" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-jj-accent)] transition-colors">WhatsApp</a></li>
                    <li><a href="https://www.linkedin.com/in/invegar-sac-sistema-drywall-11546a10a/" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-jj-accent)] transition-colors">LinkedIn</a></li>
                    <li><a href="https://www.facebook.com/profile.php?id=100049409715226" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--color-jj-accent)] transition-colors">Facebook</a></li>
                </ul>
            </div>
        </div>

        <hr class="border-[var(--color-jj-gray)] mb-8" />

        <div class="flex flex-col md:flex-row justify-between items-center text-sm gap-4 md:gap-0">
            <p>&copy; Copyright {new Date().getFullYear()} Desarrollado y Diseñado por Fabrizio Zambrano</p>
            <div class="flex gap-6">
                <a href="/politicasyprivacidad" class="hover:text-[var(--color-jj-accent)] transition-colors">Privacy & Policy</a>
                <a href="/Terminosycondiciones" class="hover:text-[var(--color-jj-accent)] transition-colors">Terms & Condition</a>
            </div>
        </div>
    </div>
</footer>