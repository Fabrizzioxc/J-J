---
// src/components/AboutSection.astro
import { Image } from 'astro:assets';
import aboutImage from '../assets/about-drywall-worker.png'; // AJUSTA LA RUTA DE TU IMAGEN

import SectionTitle from './SectionTitle.astro';
import CheckCircleIcon from './icons/CheckCircleIcon.astro';
import ClockIcon from './icons/ClockIcon.astro';
import ShieldIcon from './icons/ShieldIcon.astro';
---

{/* Eliminamos min-h-screen y ajustamos py- */}
<section class="bg-[var(--color-jj-dark)] text-[var(--color-jj-text-light)] py-20 lg:py-24">
  <div class="container mx-auto px-4 flex flex-col lg:flex-row items-center gap-12">

    <div class="relative w-full lg:w-1/2 flex justify-center lg:justify-start"> {/* Flex para centrar/alinear la imagen */}
      <div class="relative z-10 max-w-sm md:max-w-md lg:max-w-none"> {/* Limita el ancho de la imagen en m칩viles/medianos */}
        {/* Clase de sombra */}
        <Image
          src={aboutImage}
          alt="Trabajador instalando drywall"
          class=" shadow-custom-yellow object-cover w-full h-auto"
          loading="lazy"
        />
      </div>
    </div>

    <div class="lg:w-1/2 text-center lg:text-left">
      <SectionTitle
        title="Nosotros"
        iconColorClass="text-[var(--color-jj-text-light)]"
        textColorClass="text-[var(--color-jj-text-light)]"
        containerClass="flex items-center gap-2 justify-center lg:justify-start mb-4"
        iconSize={24}
      />

      <h2 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
        Expertos que <br class="hidden md:inline" /> Construyen Confianza.
      </h2>

      <p class="text-lg md:text-xl mb-8 leading-relaxed max-w-2xl mx-auto lg:mx-0">
        En J&J Servicios Generales, contamos con m치s de 12 a침os de experiencia transformando espacios. Somos especialistas en Drywall, pintura y electricidad, garantizando soluciones integrales que se adaptan a tu proyecto, con acabados duraderos y seguros.
      </p>

      <ul class="space-y-4 mb-8 text-lg font-semibold mx-auto lg:mx-0 max-w-max lg:max-w-none">
        <li class="flex items-center gap-3 justify-center lg:justify-start">
          <CheckCircleIcon class="text-[var(--color-jj-accent)]" size={28} />
          <span>Excelencia en cada acabado</span>
        </li>
        <li class="flex items-center gap-3 justify-center lg:justify-start">
          <ClockIcon class="text-[var(--color-jj-accent)]" size={28} />
          <span>Cumplimiento en cada Plazo</span>
        </li>
        <li class="flex items-center gap-3 justify-center lg:justify-start">
          <ShieldIcon class="text-[var(--color-jj-accent)]" size={28} />
          <span>Cuidado Integral en cada Paso</span>
        </li>
      </ul>

      <div class="flex justify-center lg:justify-start">
        <a
          href="/nosotros"
          class="bg-[var(--color-jj-accent)] text-[var(--color-jj-dark)] px-8 py-4 text-lg font-semibold hover:opacity-90 transition-opacity rounded"
        >
          Ver m치s
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Clase para la sombra, ahora con offset negativo en X */
  .shadow-custom-yellow {
    box-shadow: -35px 40px 0 var(--color-jj-accent); /* X negativo, Y positivo */
  }
</style>